<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.BoughtTripsController">
  <children>
      <BorderPane>
         <top>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" styleClass="historyLabel" stylesheets="@application.css" text="Historia zakupionych wycieczek">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <Separator prefHeight="0.0" prefWidth="640.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </top>
         <bottom>
            <VBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Separator />
                  <HBox alignment="CENTER" prefHeight="40.0" spacing="10.0">
                     <children>
                        <Button fx:id="closeButton" alignment="CENTER" mnemonicParsing="false" onAction="#close" styleClass="buyTripButton" stylesheets="@application.css" text="Zamknij" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </bottom>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <center>
            <HBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="680.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="tripImage" fitHeight="280.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></ImageView>
                  <VBox prefWidth="300.0" spacing="5.0">
                     <HBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </HBox.margin>
                     <children>
                        <HBox layoutX="10.0" layoutY="20.0">
                           <children>
                              <Label prefHeight="17.0" prefWidth="160.0" text="Data zakupu:" />
                              <Label fx:id="purchaseDateTimeLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label prefWidth="160.0" text="Wylot z:" />
                              <Label fx:id="fromCountryLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="20.0">
                           <children>
                              <Label prefWidth="160.0" text="Przylot do:" />
                              <Label fx:id="toCountryLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="42.0">
                           <children>
                              <Label prefWidth="160.0" text="Data wylotu:" />
                              <Label fx:id="dateArrivalLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="64.0">
                           <children>
                              <Label prefWidth="160.0" text="Data powrotu:" />
                              <Label fx:id="dateDepartureLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="86.0">
                           <children>
                              <Label prefWidth="160.0" text="Ilość dni:" />
                              <Label fx:id="durationLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="108.0">
                           <children>
                              <Label prefWidth="160.0" text="Cena za osobę:" />
                              <Label fx:id="priceLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="130.0">
                           <children>
                              <Label prefWidth="160.0" text="Ilość zakupionych miejsc:" />
                              <Label fx:id="seatsLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="174.0">
                           <children>
                              <Label prefWidth="160.0" text="Ubezpieczenie:" />
                              <Label fx:id="insuranceLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <Separator prefWidth="200.0" />
                        <HBox layoutX="10.0" layoutY="152.0">
                           <children>
                              <Label prefWidth="100.0" text="Hotel:" />
                              <Label fx:id="hotelNameLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="182.0">
                           <children>
                              <Label prefWidth="100.0" text="Miasto:" />
                              <Label fx:id="hotelCityLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="204.0">
                           <children>
                              <Label prefWidth="100.0" text="Standard:" />
                              <Label fx:id="hotelRatingLabel" layoutX="10.0" layoutY="10.0" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding></VBox>
               </children>
            </HBox>
         </center>
         <left>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="previousTrip" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showPreviousTrip" prefWidth="100.0" text="Poprzednia" />
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin>
            </VBox>
         </left>
         <right>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="nextTrip" mnemonicParsing="false" onAction="#showNextTrip" prefWidth="100.0" text="Następna" />
               </children>
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </VBox>
         </right>
      </BorderPane>
  </children>
</VBox>
